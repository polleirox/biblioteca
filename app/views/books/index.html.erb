<%=search_form_for @q do|f|%>
  <div class="form-group">
    <%= f.label:name_or_author %>
    <%= f.search_field:name_or_author, class:"form-control",placeholder:"Search text"%>
  </div>

  <div class="form-group">
    <%=f.label:state_eq,"Status"%>
    <%=f.select:state_eq,options_for_select(Book.states,@q.state_eq),{},{class:"form-control"}%>
  </div>
<br>
  <%=f.submit"Search",class:"btn btn-primary"%>
<%end%>
</div>
</div>


<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :name) %></th>
      <th><%= sort_link(@q, :author) %></th>
      <th><%= sort_link(@q, :state) %></th>
      <th>Date in</th>
      <th>Date out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.state %></td>
        <td><%= book.date_in %></td>
        <td><%= book.date_out %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
